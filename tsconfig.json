{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },

  "include": ["src/**/*", "drizzle.config.ts", "env.ts", "emails", "scripts"],
  "exclude": ["**/node_modules", "**/dist", "**/.*/"]
}
